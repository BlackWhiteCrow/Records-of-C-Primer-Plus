第四章
学习
1.
//talkback.c -- 演示与用户交互
#include <stdio.h>
#include "limits.h"
#include "float.h"
#include "string.h"
#define DENSITY 62.4
int main(){
     float weight, volume;
     int size, letters;
     char name[40];
//name 是一个可容纳40个字符的数组

    printf("Hi! What's your first name?\n");
    scanf("%s",name);
    printf("%s,What's your weight in pounds?\n",name);
    scanf("%f",&weight);
    size = sizeof(name);
    letters = strlen(name);
    volume = weight / DENSITY;
    printf("Well, %s, your volume is %2.2f cubic feet.\n",name,
            volume);
    printf("Also, your first name has %d letters,\n",letters);
    printf("and we have %d bytes to store it.\n",size);

    return 0;
}

2.
/* praise1.c -- use different types of string */
#include "stdio.h"
#define PRAISE "You are an extraordinary being."
int main(void)
{
    char name[40];
    printf("What's your name?");
    scanf("%s", name);
    printf("Hello,%s,%s\n", name, PRAISE);

    return 0;
}
scanf() 只读取字符串的第一个单词
scanf()，里面数组 name 前没有加 &

3.praise strlen() sizeof(), %zd 

/* praise2.c */
// try the %u or %lu specifiers(?) if your implementation
// does not recognize the %zd specifier.
#include "stdio.h"
#include "string.h" /* provide strlen() protoype(?)*/
#define PRAISE "You are an extraordinary being"

int main(void)
{
    char name[40];
    printf("What is your name?");
    scanf("%s",name);
    printf("Hello,%s. %s\n",name, PRAISE);
    printf("Your name of %zd letters occuples %zd "
           "memory cells.\n",strlen(name), sizeof(name));
    printf("The phrase of praise has %zd letters ",strlen(PRAISE));
    printf("and occupies %zd memory cells. \n", sizeof(PRAISE));

    return 0;

}

4.
/* pizza.c 在披萨饼程序中使用已定义的常量*/
#include "stdio.h"
#define PI 3.14159
int main(void)
{
    float area,circum,radius;
    printf("What's the radius of your pizza?\n");
    scanf("%f",&radius);
    area = PI * radius * radius;
    circum = 2.0 * PI * radius;
    printf("circumference = %1.2f, area = %1.2f\n",circum, area);
    return 0;
}

